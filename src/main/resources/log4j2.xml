<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%highlight{%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%t] %logger} - %msg%n"/>
		</Console>
		<RollingFile name="FileLogging" fileName="scheduled-turnoff.log" filePattern="scheduled-turnoff.%i.log.gz">
			<PatternLayout>
				<Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%t] %logger - %msg%n</Pattern>
			</PatternLayout>
			<Policies>
				<OnStartupTriggeringPolicy/>
				<SizeBasedTriggeringPolicy size="1 MB"/>
			</Policies>
			<DefaultRolloverStrategy max="9" compressionLevel="9"/>
		</RollingFile>
	</Appenders>
	<Loggers>
		<Root level="ALL">
			<AppenderRef ref="FileLogging"/>
			<AppenderRef ref="Console"/>
		</Root>

		<Logger name="org.quartz" level="INFO" additivity="false">
			<AppenderRef ref="Console"/>
			<AppenderRef ref="FileLogging"/>
		</Logger>
	</Loggers>
</Configuration>